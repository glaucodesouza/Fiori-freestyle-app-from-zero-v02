<mvc:View
    controllerName="freestyledozerov02.controller.Worklist"
	xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic"
    >    
    
<App id="worklist">
<pages>
<Page id="_IDGenPage1">
<content>
<Text id="Text" text="Worklist"/>
    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false"
        showFooter="false">

        <semantic:titleHeading>
            <Title id="_IDGenTitle1"
                text="{i18n>worklistTitle}"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:content>
            <Table
                id="table"
                width="auto"
                mode="MultiSelect"
                delete="onDeletar"
                items="{
                    path: '/Z270CADPRODUTOSSet',
                    sorter: {
                        path: 'Codigo',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingThreshold="10"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar id="_IDGenOverflowToolbar1">
                        <Title
                            id="tableHeader"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"/>
                        <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                        <Button id="btnCriar"           text="Criar"            press="onCriar"         type="Emphasized"/>
                        <Button id="btnDeletarMuitos"   text="Eliminar Vários"  press="onDeletarMuitos" type="Emphasized"/>
                        <Button id="btnAnexos"          text="Anexos"           press="onAnexos"        type="Emphasized"/>
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch2">
                            <layoutData>
                                <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData1"
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="codigoColumn">
                      <Text text="Código" id="codigoColumnLabel" />
                    </Column>
                    <Column id="descricaoColumn" hAlign="Left">
                      <Text text="Produto" id="descricaoColumnLabel"/>
                    </Column>
                    <Column id="kwmengColumn" hAlign="End">
                      <Text text="Quantidade" id="kwmengColumnLabel"/>
                    </Column>
                    <Column id="netprColumn" hAlign="End">
                        <Text text="Preço Líquido" id="netprColumnLabel"/>
                    </Column>
                    <Column id="_IDGenColumn1" hAlign="End">
                    <Text id="_IDGenText1" text="Aprovar Venda" />
                    </Column>
                        <Column id="_IDGenColumn2" hAlign="End">
                    <Text id="_IDGenText2" text="Deletar" /> 
                    </Column>
                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListItem1"
                        type="Navigation"
                        press=".onTableLinePress">
                        <cells>
                            <ObjectIdentifier id="_IDGenObjectIdentifier1" title="{Codigo}"/>
                            <Text id="_IDGenText3" text="{Descricao}"/>
                            <ObjectNumber id="_IDGenObjectNumber1" 
								number="{
                                    path: 'Kwmeng',
									type: 'sap.ui.model.type.Float',
                                    formatOptions: {decimals: 2}
                                }" 
                                unit="{Meins}" />
                            <ObjectNumber id="_IDGenObjectNumber2" number="{
                                    path: 'Netpr',
                                    type: 'sap.ui.model.type.Float',
                                    formatOptions: {decimals: 2}
                                }"
                                unit="{Waerk}" />
                            <Button id="_IDGenButton1" icon="{= ${Aprovado} === true ? 'sap-icon://accept' : 'sap-icon://approve'}" press="onAprovarProduto" />
                            <Button id="_IDGenButton2" icon="sap-icon://delete"    press="onDeletar" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </semantic:content> 

		<semantic:footerCustomActions>
			<Button id="_IDGenButton3" 
			icon="sap-icon://alert"
			text="{= ${messagez>/}.length }"
			visible="{= ${messagez>/}.length > 0 }"
			type="Emphasized"
			press="onMessagePopoverPress"
			></Button>
		</semantic:footerCustomActions>

    </semantic:SemanticPage>
    </content>
</Page>
</pages>
</App>
</mvc:View>